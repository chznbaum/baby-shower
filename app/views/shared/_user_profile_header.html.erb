<div class="profile-header">
    <%= image_tag "http://placehold.it/800x200", alt: "", class: "img-fluid cover-image" %>
    <div>
        <div class="row">
            <div class="col-2 offset-sm-1 show-avatar">
                <%= image_tag @user.avatar, alt: "", class: "img-fluid rounded" unless @user.avatar.nil? %>
                <h2><%= @user.name %></h2>
            </div>
            <div class="col-8">
                <div class="row">
                    <p class="lead"><%= @description %></p>
                </div>
            </div>
        </div>
    </div>
</div>